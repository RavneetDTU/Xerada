<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_login_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="io.github.xerada.Activities.Login_Activity">
    <EditText
        android:background="@drawable/my_button_bg"
        android:layout_width="match_parent"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp"
        android:id="@+id/emailinput"
        android:layout_alignParentEnd="true"
        android:hint="Enter Email Id"
        android:textSize="12sp"
        android:textColorLink="?attr/colorPrimary"
        android:textColorHighlight="@color/colorPrimary"
        android:padding="16dp"
        android:layout_height="50dp" />

    <EditText
        android:background="@drawable/my_button_bg"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/emailinput"
        android:layout_alignParentStart="true"
        android:id="@+id/passinput"
        android:layout_alignParentEnd="true"
        android:hint="Enter Password"
        android:fontFamily="sans-serif"
        android:textSize="12sp"
        android:padding="16dp"/>

    <Button
        android:text="Sign In"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passinput"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:id="@+id/loginbutton"
        android:layout_alignParentEnd="true"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:background="@drawable/my_colored_bordered_button"
        android:backgroundTint="@color/black"
        android:textColor="@android:color/background_light"
        android:textStyle="normal|bold"
        android:textSize="18sp" />


    <TextView
        android:text="Not a user yet! , "
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginbutton"
        android:layout_alignParentStart="true"
        android:id="@+id/textView2" />

    <TextView
        android:text="Sign Up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginbutton"
        android:layout_toEndOf="@+id/textView2"
        android:id="@+id/regtextview"
        android:textColor="@color/colorlink" />

    <TextView
        android:text="Forgot Password ?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/regtextview"
        android:layout_alignParentEnd="true"
        android:id="@+id/forgotpass"
        android:textColor="@color/colorlink" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp" />
    <View
        android:id="@+id/marginline"
        android:layout_width="150dp"
        android:layout_height="2dp"
        android:layout_below="@+id/regtextview"
        android:layout_marginTop="16dp"
        android:background="#c0c0c0"/>
    <View

        android:layout_width="150dp"
        android:layout_height="2dp"
        android:layout_below="@+id/forgotpass"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="16dp"
        android:background="#c0c0c0"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OR"
        android:layout_below="@+id/regtextview"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="170dp"
        />
    <ImageView
        android:layout_width="200dp"
        android:id="@+id/imageView2"
        android:layout_height="200dp"
        android:tint="@color/black"
        android:layout_alignParentTop="true"
        />

</RelativeLayout>
