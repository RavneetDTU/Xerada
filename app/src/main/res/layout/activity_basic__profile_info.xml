<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_basic__profile_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Activities.Users_info">

    <TextView
        android:text="Enter Your Full Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:id="@+id/textView8"
        android:textColor="@color/colorlink"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="300dp"
        android:inputType="textPersonName"
        android:hint="Your Full Name"
        android:ems="10"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"
        android:id="@+id/editText4"
        android:background="@drawable/my_button_bg"
        android:layout_height="50dp"
        android:padding="16dp"/>

    <Button
        android:text="Next"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/button7"
        android:background="@drawable/my_colored_bordered_button"
        android:backgroundTint="@android:color/holo_blue_bright"
        android:textColor="@android:color/background_light"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/editText4"
        android:layout_marginBottom="130dp" />

    <TextView
        android:text="Select Your Gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText4"
        android:layout_alignStart="@+id/editText4"
        android:layout_marginTop="38dp"
        android:id="@+id/textView32" />

    <Button
        android:text="Select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText4"
        android:layout_alignEnd="@+id/editText4"
        android:layout_marginTop="19dp"
        android:id="@+id/button13"
        android:background="@drawable/my_grey_coloured_border"/>
</RelativeLayout>
